                        <tr>
                            <td>
                            <div style="width:1320px; height:330px; overflow:auto;">
                                <table cellspacing="0" cellpadding="1" border="1" width="1300" id="mytable" style="border-collapse: collapse;">
                                {{#each result}}
                                <tr>
									<td><div style="width:75px; height:75px; margin:0 auto;"><img src="{{this.Link_image}}" class="img-fit" ></div></td>
                                    <td>{{this.Name_product}}</td>
									<td id="price{{this.Id_product}}">{{this.Price}}</td>
                                    <td><input value="{{this.Quatity}}" id="qual{{this.Id_product}}" class="input1" disabled></td>
                                    <td id="totalprice{{this.Id_product}}" class="total" onclick="calctotal()"></td>
									
                                </tr>
								
								<script>
									var elt = document.getElementById(`price{{this.Id_product}}`).innerText;
									memory = parseInt(elt);
									elt = document.getElementById(`qual{{this.Id_product}}`).value;
									hdd = parseInt(elt);
									var total = memory*hdd;
									document.getElementById(`totalprice{{this.Id_product}}`).innerText= total;

								</script>  
                                {{/each}}
								
								<tfoot>
									<tr>
									<th colspan="4">Total :</th>
									<td id="total"></td>
									</tr>
									<script>
										var arr,total,num;
										
										calctotal();
										function calctotal(){
											total=0;
											num=0;
											arr = document.getElementsByClassName("total");
											for(var i=0; i < arr.length ; i++){
											num = parseInt(arr[i].innerText);
											total += num;
											}
											document.getElementById('total').innerText = total;
										}
									</script>
								</tfoot>
                                </table>
								
